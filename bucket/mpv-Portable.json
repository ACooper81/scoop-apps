    "suggest": {
        "youtube-dl": "youtube-dl"
    },
    "architecture": {
        "64bit": {
            "url": "https://downloads.sourceforge.net/project/mpv-player-windows/64bit/mpv-x86_64-20230723-git-ca4192e.7z",
