    ],
    "shortcuts": [
        [
            "thunderbird.exe",
            "Mozilla Thunderbird",
            "-profile \"$dir\\profile\""
        ]
    ],
    "persist": "profile",
    "checkver": {
        "url": "https://www.thunderbird.net/thunderbird/all/",
        "regex": "thunderbird/([\\d.]+)/"
    },
