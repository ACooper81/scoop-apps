    "changelog": "https://www.thunderbird.net/en-US/thunderbird/91.3.2/releasenotes/#changes",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/102.6.0/win64/en-US/Thunderbird%20Setup%20102.6.0.exe#/dl.7z",
            "hash": "sha512:1988eb8626ea0479897d2fb684a6da244f8276380a4cb0cd17fab9b63c44a8ade2cf5fbbe39a6dc4d3e0d4256ebc4420841e05e5636bd8e557d367188bac7ce0"
