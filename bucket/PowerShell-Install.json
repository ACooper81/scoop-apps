    "architecture": {
        "64bit": {
            "url": "https://github.com/PowerShell/PowerShell/releases/download/v7.0.0/PowerShell-7.0.0-win-x64.msi#/setup.msi_",
            "hash": "876f4a64012a1fb024dccea696db00c5cd1a37c8dc9dfa2431c58cdf9f82950b"
        },
        "32bit": {
            "url": "https://github.com/PowerShell/PowerShell/releases/download/v7.0.0/PowerShell-7.0.0-win-x86.msi#/setup.msi_",
            "hash": "c0e8cbe16eda134385d499881e6e0f2784bcb4d26cbe42ed5b81e29eec37b3da"
        }
    },
    "pre_install": [
        "$processname = \"pwsh\"",
        "$process = Get-Process $processname -ErrorAction SilentlyContinue",
        "if ($process) {",
        "   $process.CloseMainWindow()",
        "   Start-Sleep -Seconds 5",
        "   if (!$process.HasExited) {",
        "       Start-Sleep -Seconds 25",
        "       $process | Stop-Process -Force",
        "   }",
        "}"
    ],
    "installer": {
        "script": [
            "$programname = \"PowerShell*\"",
            "$installpath = \"$dir\\setup.msi_\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   Invoke-ExternalCommand msiexec -ArgumentList @('/i', \"$dir\\setup.msi_\", '/quiet ADD_EXPLORER_CONTEXT_MENU_OPENPOWERSHELL=1 ENABLE_PSREMOTING=1 REGISTER_MANIFEST=1') -RunAs | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.msi_\" -Force"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/PowerShell/PowerShell/releases/download/v$version/PowerShell-$version-win-x64.msi#/setup.msi_"
            },
            "32bit": {
                "url": "https://github.com/PowerShell/PowerShell/releases/download/v$version/PowerShell-$version-win-x86.msi#/setup.msi_"
            }
        }
    }
}
