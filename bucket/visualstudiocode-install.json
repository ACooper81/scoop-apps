        },
        "32bit": {
            "url": "https://update.code.visualstudio.com/1.44.1/win32/stable#/setup.exe",
            "hash": "f33612e1134c8004e3a76f210b868078d4a779911fccc9d09ff2cdaf259efa46"
        }
    },
    "pre_install": [
        "$processname = \"code\"",
        "$programname = \"Microsoft Visual Studio Code*\"",
        "if (Get-Process \"$processname\" -ErrorAction SilentlyContinue)",
        "{",
        "Write-Host Please close $programname windows before install/update. -ForegroundColor Cyan",
        "Exit 0",
        "}"
    ],
    "installer": {
        "script": [
            "$programname = \"Microsoft Visual Studio Code*\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   &\"$dir\\setup.exe\" /VERYSILENT /MERGETASKS=!runcode,!desktopicon,!quicklaunchicon,addcontextmenufiles,addcontextmenufolders,associatewithfiles,addtopath | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "checkver": {
        "url": "https://code.visualstudio.com/sha?build=stable",
        "jp": "$.products[?(@.platform.os == 'win32-x64-archive')].name"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://update.code.visualstudio.com/$version/win32-x64/stable#/setup.exe"
            },
            "32bit": {
                "url": "https://update.code.visualstudio.com/$version/win32/stable#/setup.exe"
            }
        }
    }
}
