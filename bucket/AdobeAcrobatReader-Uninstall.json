{
    "version": "1",
    "description": "This manifest only uninstalls Adobe Acrobat Reader. To install run 'scoop install AdobeAcrobatReader-Install -global'",
    "homepage": "https://acrobat.adobe.com/us/en/acrobat/pdf-reader.html",
    "url": "https://github.com/ACooper81/scoop-apps/blob/master/null",
    "notes": "This manifest only uninstalls Adobe Acrobat Reader. To install run 'scoop install AdobeAcrobatReader-Install -global'",
    "installer": {
        "script": [
            "$programname = \"Adobe Acrobat Reader DC*\"",
            "$msiprogramname = \"Adobe Acrobat Reader DC\"",
            "$processname = \"AcroRd32.exe\"",
            "if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -ErrorAction SilentlyContinue)",
            "{",
            "   taskkill /F /IM $processname /FI 'status eq running'",
            "   $id = wmic product where \"\"\"name like '$msiprogramname%'\"\"\" get IdentifyingNumber | find /i \"\"\"-\"\"\"",
            "   Start-Process -Wait -WindowStyle Hidden cmd \"/c msiexec /x $id /qn /norestart\" -Verb RunAs",
            "}"
        ]
    },
    "post_installer": {
        "script": [
            "scoop uninstall AdobeAcrobatReader-Uninstall",
            "scoop uninstall AdobeAcrobatReader-Uninstall -global"
        ]
    }
}
