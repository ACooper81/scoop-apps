            "$filepath = \"$ProgramFiles\\4KDownload\\4kvideodownloader\\4kvideodownloader.exe\"",
            "$regPath = \"HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\{7BFB58DD-7484-49BF-A8F7-0CD4A80BA5F8}\"",
            "$regValue = \"DisplayVersion\"",
            "if((Get-ItemProperty -Path \"$regPath\" -Name \"$regValue\").DisplayVersion -lt [Version]\"$version\")",
