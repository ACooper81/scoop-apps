    "hash": "e102238100a8b97d22559065e3b19379757aeda932c36916d2c84a4178921854",
    "installer": {
        "script": [
            "Invoke-ExternalCommand \"$dir\\autoit-v3-setup.exe\" -ArgumentList @('/S') -RunAs | Out-Null"
        ]
    },
    "post_install": [
        "Remove-Item \"$dir\\autoit-v3-setup.exe\""
    ],
    "uninstaller": {
        "script": [
            "$ProgramFilesX86Path = [Environment]::GetFolderPath(\"ProgramFilesX86\")",
            "& \"$ProgramFilesX86Path\\AutoIt3\\Uninstall.exe\" /S",
            "$CommonStartMenuPath = [Environment]::GetFolderPath(\"CommonStartMenu\")",
            "Remove-Item –path \"$CommonStartMenuPath\\Programs\\AutoIt v3\" –recurse"
        ]
    },
    "checkver": {
        "url": "https://www.autoitscript.com/site/autoit/downloads/",
        "re": "<td>v([\\d.]+)</td>"
    },
    "autoupdate": {
        "url": "https://www.autoitscript.com/files/autoit3/autoit-v3-setup.exe"
    }
