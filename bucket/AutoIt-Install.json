{
    "version": "3.3.14.5",
    "description": "Scripting language designed for automating the Windows GUI and general scripting",
    "homepage": "https://www.autoitscript.com/site/autoit/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.autoitscript.com/autoit3/docs/license.htm"
    },
    "url": "https://www.autoitscript.com/files/autoit3/autoit-v3-setup.exe#/setup.exe",
    "hash": "e102238100a8b97d22559065e3b19379757aeda932c36916d2c84a4178921854",
    "installer": {
        "script": [
            "$programname = \"AutoIt v*\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   &\"$dir\\setup.exe\" /S | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "uninstaller": {
        "script": [
            "$programname = \"AutoIt v*\"",
            "$ProgramFilesPath = [Environment]::GetFolderPath(\"ProgramFilesX86\")",
            "$processname = \"AutoIt3.exe\"",
            "$processname = \"AutoIt3_x64.exe\"",
            "if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue)",
            "{",
            "   taskkill /F /IM $processname /FI 'status eq running'",
            "   &\"$ProgramFilesPath\\AutoIt3\\uninstall.exe\" /S | Out-Null",
            "   if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue)",
            "   {",
            "       exit 1",
            "   }",
            "}"
        ]
    },
    "checkver": {
        "url": "https://www.autoitscript.com/site/autoit/downloads/",
        "re": "<td>v([\\d.]+)</td>"
    },
    "autoupdate": {
        "url": "https://www.autoitscript.com/files/autoit3/autoit-v3-setup.exe#/setup.exe"
    }
}
