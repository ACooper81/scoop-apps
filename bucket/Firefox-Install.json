{
    "version": "94.0.1",
    "description": "Popular open source web browser.",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": "MPL-2.0",
    "changelog": "https://www.mozilla.org/en-US/firefox/84.0.2/releasenotes/",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/94.0.1/win64/en-US/Firefox%20Setup%2094.0.1.exe#/setup.exe",
            "hash": "sha512:8923e911b562a65f6bbbbfa3fbf1b5993974509f86c7757328eaaeec417265f15336865dcf70db7f13b43da79f6e8b2a8892330a149d09bb7f661127333c9959"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/94.0.1/win32/en-US/Firefox%20Setup%2094.0.1.exe#/setup.exe",
            "hash": "sha512:44208a98eea1f1011295a6527b22549c89ff4a5b843f5e98e876ff8fbe4b89d361967908c700487389020af7196de3fb843611433f5213eff348cdbbb5b40b5e"
        }
    },
    "pre_download": "Assert-Administrator",
    "installer": {
        "script": [
            "$programname = \"Mozilla Firefox*\"",
            "$regPath = \"HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\Mozilla Firefox *\"",
            "if((Get-ItemProperty -Path \"$regPath\").DisplayVersion -lt [Version]\"$version\")",
            "{",
            "   &\"$dir\\setup.exe\" -ms | Out-Null",
            "   if((Get-ItemProperty -Path \"$regPath\").DisplayVersion -lt [Version]\"$version\")",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "post_install": [
        "$CommonDesktopPath = [Environment]::GetFolderPath(\"CommonDesktopDirectory\")",
        "if (Test-Path \"$CommonDesktopPath\\Firefox.lnk\") {Remove-Item \"$CommonDesktopPath\\Firefox.lnk\" -Force}"
    ],
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/notes/",
        "regex": "<div class=\"c-release-version\">([\\d.]+)</div>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/setup.exe",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/setup.exe",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            }
        },
        "changelog": "https://www.mozilla.org/en-US/firefox/$version/releasenotes/"
    }
}
