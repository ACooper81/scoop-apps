            "Remove-Item \"$dir\\vivaldi.7z\"",
            "Remove-Item \"$dir\\Application\\update_notifier.exe\"",
            "Write-Output \"// Vivaldi Standalone\" | Set-Content \"$dir\\Application\\stp.viv\""
