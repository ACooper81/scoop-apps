    "hash": "2c36277919791cd3aea512b3adabff58af4158dde0403f1c96a386681dbe4185",
    "pre_download": "Assert-Administrator",
    "installer": {
        "script": [
            "$programname = \"SteelSeries GG*\"",
            "$regPath = \"HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\SteelSeries Engine 3\"",
            "$regValue = \"DisplayVersion\"",
            "if((Get-ItemProperty -Path \"$regPath\" -Name \"$regValue\").DisplayVersion -lt [Version]\"$version\")",
            "{",
            "   &\"$dir\\setup.exe\" /S | Out-Null",
            "   if((Get-ItemProperty -Path \"$regPath\" -Name \"$regValue\").DisplayVersion -lt [Version]\"$version\")",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "checkver": {
        "url": "https://techblog.steelseries.com/",
        "regex": "Release notes for GG ([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://steelseries.com/gg/downloads/gg/latest/windows#/setup.exe"
    }
}
