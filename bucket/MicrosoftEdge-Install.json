    "architecture": {
        "64bit": {
            "url": "http://dl.delivery.mp.microsoft.com/filestreamingservice/files/812c141f-8680-4aaa-83d2-f99316588162/MicrosoftEdgeEnterpriseX64.msi#/setup.msi_",
            "hash": "A8BEC701783CF031B4D3D0C4E0476DE5461CF9D1482E462E630F3164B3F50E94"
        },
        "32bit": {
            "url": "http://dl.delivery.mp.microsoft.com/filestreamingservice/files/70874dc1-b23c-4634-ba85-84788783a1c4/MicrosoftEdgeEnterpriseX86.msi#/setup.msi_",
            "hash": "0C1CA1C2A75E8E08DA598195EAD4ECD74BDAB9507468F7541BACF3A04926CC2B"
        }
    },
    "installer": {
        "script": [
            "$programname = \"Microsoft Edge*\"",
            "$installpath = \"$dir\\setup.msi_\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   Invoke-ExternalCommand msiexec -ArgumentList @('/i', \"$dir\\setup.msi_\", '/qn') -RunAs | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.msi_\" -Force"
        ]
    },
    "post_install": [
        "$CommonDesktopPath = [Environment]::GetFolderPath(\"CommonDesktopDirectory\")",
        "if (Test-Path \"$CommonDesktopPath\\Microsoft Edge.lnk\") {Remove-Item \"$CommonDesktopPath\\Microsoft Edge.lnk\" -Force}"
    ],
    "checkver": {
        "url": "https://www.whatismybrowser.com/guides/the-latest-version/edge",
        "regex": "<td>Edge on <strong>Windows 10</strong></td>\\n\\s+<td>([\\d.]+)"
    }
}
