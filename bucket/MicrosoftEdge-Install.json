{
    "version": "81.0.416.53",
    "description": "World-class performance with more privacy, more productivity, and more value while you browse.",
    "homepage": "https://www.microsoft.com/en-us/edge/business",
    "license": "",
    "architecture": {
        "64bit": {
            "url": "http://dl.delivery.mp.microsoft.com/filestreamingservice/files/48139845-89ac-44b5-af5b-ef7d2ac92c93/MicrosoftEdgeEnterpriseX64.msi#/setup.msi_",
            "hash": "932BE382DB229D3AB4FF2DCA9CE5CBB9DED5B05E60958FD5B2D388EEB82E7152"
        },
        "32bit": {
            "url": "http://dl.delivery.mp.microsoft.com/filestreamingservice/files/6794ee13-fa11-4363-856f-02157a15cb66/MicrosoftEdgeEnterpriseX86.msi#/setup.msi_",
            "hash": "F0C4C2139104B9DC6C6F4447F217D9D7BBD8DCFE346CFAA13DA81322D23C6105"
        }
    },
    "installer": {
        "script": [
            "$programname = \"Microsoft Edge*\"",
            "$installpath = \"$dir\\setup.msi_\"",
            "$ProgramFilesX86 = [Environment]::GetFolderPath(\"ProgramFilesX86\")",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue)`",
            "-or !(Test-Path \"$ProgramFilesX86\\Microsoft\\Edge\\Application\\$version\\msedge.dll\"))",
            "{",
            "   Invoke-ExternalCommand msiexec -ArgumentList @('/i', \"$dir\\setup.msi_\", '/qn') -RunAs | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue)`",
            "   -or !(Test-Path \"$ProgramFilesX86\\Microsoft\\Edge\\Application\\$version\\msedge.dll\"))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.msi_\" -Force"
        ]
    },
    "post_install": [
        "$CommonDesktopPath = [Environment]::GetFolderPath(\"CommonDesktopDirectory\")",
        "if (Test-Path \"$CommonDesktopPath\\Microsoft Edge.lnk\") {Remove-Item \"$CommonDesktopPath\\Microsoft Edge.lnk\" -Force}"
    ],
    "checkver": {
        "url": "https://chocolatey.org/packages/microsoft-edge",
        "regex": "(?sm)Microsoft Edge ([\\d.]+)|url32 = &#39;(?<url32>[.*])&#39;"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchUrl32#/setup.msi_"
            },
            "32bit": {
                "url": "$matchUrl32#/setup.msi_"
            }
        }
    }
}
