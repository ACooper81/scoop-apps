    "installer": {
        "script": [
            "$programname = \"Microsoft Edge*\"",
            "$installpath = \"$dir\\setup.msi_\"",
            "$ProgramFiles = [Environment]::GetFolderPath(\"ProgramFilesX86\")",
            "$exepath = \"$ProgramFiles\\Google\\Chrome\\Application\\edge.exe\"",
            "$filepath = \"$ProgramFiles\\Microsoft\\Edge\\Application\\$version\\msedge.dll\"",
            "if(((Test-Path -Path $filepath -PathType Leaf) -eq $false) -or ((Get-Command $edgepath).Version -lt [System.Version]\"$version\"))",
            "{",
            "   Invoke-ExternalCommand msiexec -ArgumentList @('/i', \"$dir\\setup.msi_\", '/qn') -RunAs | Out-Null",
            "   if(((Test-Path -Path $filepath -PathType Leaf) -eq $false) -or ((Get-Command $filepath).Version -lt [System.Version]\"$version\"))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "if (Test-Path -Path \"$dir\\setup.msi_\") { Remove-Item \"$dir\\setup.msi_\" -Force }"
        ]
    },
    "post_install": [
        "$CommonDesktopPath = [Environment]::GetFolderPath(\"CommonDesktopDirectory\")",
