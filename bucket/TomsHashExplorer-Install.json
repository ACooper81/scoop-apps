    "installer": {
        "script": [
            "$programname = \"Toms Hash Explorer*\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   &\"$dir\\setup.exe\" /VERYSILENT /SUPPRESSMSGBOXES /NORESTART /CLOSEAPPLICATIONS /SP- | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "uninstaller": {
        "script": [
            "$programname = \"Toms Hash Explorer*\"",
            "$ProgramFilesPath = [Environment]::GetFolderPath(\"ProgramFiles\")",
            "$processname = \"Toms Hash Explorer.exe\"",
            "if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue)",
            "{",
            "   taskkill /F /IM $processname /FI 'status eq running'",
            "   &\"$ProgramFilesPath\\Toms Hash Explorer\\unins000.exe\" /VERYSILENT /SUPPRESSMSGBOXES /NORESTART | Out-Null",
            "   if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue)",
            "   {",
            "       exit 1",
            "   }",
            "}"
        ]
    },
    "checkver": {
        "url": "https://www.mannerud.org/tom-andreas/software/toms-hash-explorer/",
        "re": ", Version ([\\d.]+2)"
    },
    "autoupdate": {
        "url": "http://www.mannerud.org/tom-andreas/downloads/Toms_Hash_Explorer_v$version.zip"
    }
