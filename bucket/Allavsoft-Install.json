{
    "version": "webversion",
    "description": "Download free videos from 100+ sites and convert to popular video and audio format.",
    "homepage": "https://www.allavsoft.com/index.html",
    "license": {
        "identifier": ""
    },
    "notes": "Installs the latest version from the website. You have to update the app using the programs updater.",
    "url": "https://www.allavsoft.com/downloads/allavsoft.exe#/setup.exe",
    "installer": {
        "script": [
            "$programname = \"Allavsoft*\"",
            "$installpath = \"$dir\\setup.exe\"",
            "$installargs = '/VERYSILENT', '/SUPPRESSMSGBOXES', '/NORESTART', '/CLOSEAPPLICATIONS', '/SP-'",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -ErrorAction SilentlyContinue))",
            "{",
            "   Invoke-ExternalCommand \"$installpath\" -ArgumentList @($installargs) -RunAs | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "post_install": [
        "Remove-Item \"$dir\\setup.exe\"",
        "$CommonDesktopPath = [Environment]::GetFolderPath(\"CommonDesktopDirectory\")",
        "if (Test-Path \"$CommonDesktopPath\\Allavsoft.lnk\") {Remove-Item \"$CommonDesktopPath\\Allavsoft.lnk\" -Force}"
    ],
    "uninstaller": {
        "script": [
            "$programname = \"Allavsoft*\"",
            "$ProgramFilesPath = [Environment]::GetFolderPath(\"ProgramFilesX86\")",
            "$processname = \"videodownloader.exe\"",
            "$uninstallpath = \"$ProgramFilesPath\\Allavsoft\\Video Downloader Converter\\unins001.exe\"",
            "$uninstallargs = '/VERYSILENT', '/SUPPRESSMSGBOXES', '/NORESTART'",
            "if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -ErrorAction SilentlyContinue)",
            "{",
            "   taskkill /F /IM $processname /FI 'status eq running'",
            "   Invoke-ExternalCommand \"$uninstallpath\" -ArgumentList @($uninstallargs) -RunAs | Out-Null",
            "   if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -ErrorAction SilentlyContinue)",
            "   {",
            "       exit 1",
            "   }",
            "}"
        ]
    }
}
