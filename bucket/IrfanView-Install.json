{
    "version": "4.56",
    "description": "A fast, compact and innovative graphic viewer",
    "homepage": "https://www.irfanview.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.irfanview.com/eula.htm"
    },
    "architecture": {
        "64bit": {
            "url": "https://www.irfanview.info/files/iview456_x64_setup.exe#/setup.exe",
            "hash": "52a48acf59027468c7f859b78c51196e42b47c9e65d17466ff1995f71a6cff91"
        },
        "32bit": {
            "url": "https://www.irfanview.info/files/iview456_setup.exe#/setup.exe",
            "hash": "2e7d41979e9f0768d3388828c66de8a3a3fd85dd644e08f7671d9815c18aeee7"
        }
    },
    "pre_install": [
        "$processname = \"i_view*\"",
        "$process = Get-Process $processname -ErrorAction SilentlyContinue",
        "if ($process) {",
        "   $process.CloseMainWindow()",
        "   Start-Sleep -Seconds 5",
        "   if (!$process.HasExited) {",
        "       Start-Sleep -Seconds 25",
        "       $process | Stop-Process -Force",
        "   }",
        "}"
    ],
    "installer": {
        "script": [
            "$programname = \"IrfanView*\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   &\"$dir\\setup.exe\" /silent /desktop=0 /thumbs=0 /group=1 /allusers=1 /assoc=0 | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "checkver": {
        "url": "https://www.irfanview.com/",
        "regex": ">\\s*version\\s+([\\d\\.-]+)\\s*<"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.irfanview.info/files/iview$majorVersion$minorVersion_x64_setup.exe#/setup.exe"
            },
            "32bit": {
                "url": "https://www.irfanview.info/files/iview$majorVersion$minorVersion_setup.exe#/setup.exe"
            }
        }
    }
}
