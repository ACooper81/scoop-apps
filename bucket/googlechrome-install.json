            "hash": "cde87f29c98176a150c18b2de5f8db25a5ff6f45c97f98284cdc4c74be119816"
        },
        "32bit": {
            "url": "https://dl.google.com/edgedl/chrome/install/GoogleChromeStandaloneEnterprise.msi#/setup.msi_",
            "hash": "2536510c83a8396c4d2c1181d9c1d6e34c8e30802611c33583469f01bfc93f01"
        }
    },
    "installer": {
        "script": [
            "$programname = \"Google Chrome*\"",
            "$installpath = \"$dir\\setup.msi_\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   Invoke-ExternalCommand msiexec -ArgumentList @('/i', \"$dir\\setup.msi_\", '/qn') -RunAs | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "post_install": [
        "$CommonDesktopPath = [Environment]::GetFolderPath(\"CommonDesktopDirectory\")",
        "if (Test-Path \"$CommonDesktopPath\\Google Chrome.lnk\") {Remove-Item \"$CommonDesktopPath\\Google Chrome.lnk\" -Force}"
    ],
    "uninstaller": {
        "script": [
            "$programname = Google Chrome*",
            "$processname = \"chrome.exe\"",
            "if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue)",
            "{",
            "   taskkill /F /IM $processname /FI 'status eq running'",
            "   $id = wmic product where \"\"\"name like '$programname%'\"\"\" get IdentifyingNumber | find /i \"\"\"-\"\"\"",
            "   Start-Process -Wait -WindowStyle Hidden cmd \"/c msiexec /x $id /qn /norestart\" -Verb RunAs",
            "   if(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -RequiredVersion $version -ErrorAction SilentlyContinue)",
            "   {",
            "       exit 1",
            "   }",
            "}"
        ]
    },
    "checkver": {
        "url": "https://chrome-dl.com/api/chrome.xml",
        "regex": "(?<version>[\\d.]+)</version>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.google.com/edgedl/chrome/install/GoogleChromeStandaloneEnterprise64.msi#/setup.msi_"
            },
            "32bit": {
                "url": "https://dl.google.com/edgedl/chrome/install/GoogleChromeStandaloneEnterprise.msi#/setup.msi_"
            }
        }
    }
}
