    "hash": "58B9248447ED65C792BAA9131ADF19D645D05146DA5B6D989581DD91D68D18EE",
    "installer": {
        "script": "Invoke-ExternalCommand \"$dir\\setup.exe\" -ArgumentList @('/VERYSILENT', '/SUPPRESSMSGBOXES', '/NORESTART', '/SP-') -RunAs | Out-Null"
    },
    "post_install": [
        "$DesktopPath = [Environment]::GetFolderPath(\"DesktopDirectory\")",
        "if (Test-Path \"$DesktopPath\\SUMo.lnk\") {Remove-Item \"$DesktopPath\\SUMo.lnk\" -Force}"
    ],
    "uninstaller": {
        "script": [
            "taskkill /F /IM SUMo.exe /FI 'status eq running'",
            "$ProgramFilesX86Path = [Environment]::GetFolderPath(\"ProgramFilesX86\")",
            "& \"$ProgramFilesX86Path\\Allavsoft\\Video Downloader Converter\\unins000.exe\" /VERYSILENT /SUPPRESSMSGBOXES /NORESTART"
        ]
    },
    "checkver": {
        "url": "https://www.kcsoftwares.com/?download",
        "regex": "(?sm)<h3>SUMo</h3>\\n\\t+\\n\\t+<small>Version : <code>([\\d.]+)</code>"
    },
    "autoupdate": {
        "url": "https://www.kcsoftwares.com/files/sumo_lite.exe#/setup.exe"
    }
}
